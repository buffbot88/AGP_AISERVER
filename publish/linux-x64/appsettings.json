{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ModelsDirectory": "models",
  "Database": {
    "Path": "users.db"
  },
  "Runtime": {
    "Type": "MockRuntime",
    "LlamaCpp": {
      "ExecutablePath": "llama-cli"
    }
  },
  "ApiKey": {
    "ProtectedPaths": [],
    "ExemptPaths": [
      "/api/auth/login",
      "/api/auth/register",
      "/api/auth/validate",
      "/api/ai/health"
    ]
  },
  "RateLimit": {
    "Enabled": true,
    "RequestsPerMinute": 60,
    "RequestsPerHour": 1000
  },
  "Https": {
    "Enabled": false,
    "Port": 7443,
    "CertificatePath": "",
    "CertificatePassword": ""
  }
}
